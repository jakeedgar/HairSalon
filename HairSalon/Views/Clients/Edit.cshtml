@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Edit Clients</h2>

<h4>Edit this super cool client: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ClientId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.LabelFor(model => model.Description)
  @Html.EditorFor(model => model.Description)

  @Html.LabelFor(model => model.PreferredStyle)
  @Html.EditorFor(model => model.PreferredStyle)

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to the beginning of the client list", "Index")</p>